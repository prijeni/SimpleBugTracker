<h1>Listing bugs</h1>
<hr>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Priority</th>
  </tr>

  <% @bugs.each do |bug| %>
    <tr>
      <td><%= link_to bug.title,bug_path(bug)  %></td>
      <td><%= bug.description %></td>
      <td><%= bug.status %></td>
      <td><%= bug.priority %></td>
    </tr>
  <% end %>
</table>